<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Authors</title>
    <link rel="shortcut icon" href="https://img.icons8.com/metro/52/000000/library.png" type="image/x-icon">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
</head>
<body>

  <nav class="navbar navbar-expand-md navbar-dark fixed-top">
    <a class="navbar-brand" href="#"></a>
    <div class="collapse navbar-collapse">

      <ul class="navbar-nav mr-auto">
        <%for(i=0;i<nav.length;i++){%>
          <li class="nav-item">
            <a class="nav-link" href="<%=nav[i].link%>"><%=nav[i].name%></a>
          </li>
        <%}%>
      </ul>
  
      <form style="margin-right: 40px;">
        <%for(i=0;i<account.length;i++){%>
          <a href="<%=account[i].link%>" class="btn btn-outline-light"><%=account[i].name%></a>
        <%}%>
      </form>
      
    </div>
  </nav>

  <div class="container-fluid">
    <div class="text-white" style="padding: 80px 40px 40px;">
      <div class="row">
        <style></style>
        <h1>Authors</h1>
      </div>
    </div>
  </div>

  <!-- CARDS -->

  <div class="container" style="padding: 30px;">

        <div class="card mb-3">
          <div class="row no-gutters">
            <div class="col-md-4">
              <img src="/images/<%=author.image%>" class="card-img">
            </div>
            <div class="col-md-8">
              <div class="card-body" style="padding: 40px;">
                <h3 class="card-title"><%=author.name%></h3>
                <div style="height: 5px;"></div>
                <!-- <p></p> -->
                <p class="card-text"><%=author.description%></p>
              </div>
              <div style="padding: 40px; position: absolute; right: 0; bottom: 0;">
                <form style="display: inline;" action="/admin/updateauthor/<%=author._id%>">
                  <button class="btn-sm btn-light">Update</button>
                </form>
                <form style="display: inline;" action="/admin/addauthor/delete/<%=author._id%>">
                  <button class="btn-sm btn-light">Delete</button>
                </form>
              </div>
            </div>
          </div>
        </div>
  
  </div>

  <!-- Footer -->
  <footer style="background-color: #3E4551; color: #ffffff;" class="page-footer font-small indigo">

    <!-- Footer Links -->
    <div class="container">

      <!-- Grid row-->
      <div class="row text-center d-flex justify-content-center pt-5 mb-3">

        <%for(i=0;i<footer.length;i++){%>
          <!-- Grid column -->
          <div class="col-md-2 mb-3">
            <h6 class="text-uppercase font-weight-bold">
              <a href="<%=footer[i].link%>"><%=footer[i].name%></a>
            </h6>
          </div>
          <!-- Grid column -->
        <%}%>

      </div>
      <!-- Grid row-->

      <!-- Grid row-->

        <!-- Grid column -->
        <div class="col-md-8 col-12 mt-5"></div>
        <!-- Grid column -->

      <!-- Grid row-->

      <!-- Grid row-->
      <div class="row pb-3">

        <!-- Grid column -->
        <div class="col-md-12">

          <div style="text-align: center;" class="mb-5 flex-center">

            <%for(i=0;i<footericon.length;i++){%>
              <a href="<%=footericon[i].link%>" class="<%=footericon[i].icon%>">
                <i class="<%=footericon[i].class%>"> </i>
              </a>
            <%}%>

          </div>

        </div>
        <!-- Grid column -->

      </div>
      <!-- Grid row-->

    </div>
    <!-- Footer Links -->

    <!-- Copyright -->
    <div style="background-color: #323741;" class="footer-copyright text-center py-3 text-muted">Â© 2020 Copyright: Library Management System</div>
    <!-- Copyright -->

  </footer>
  <!-- Footer -->

  <script src="public/js/bootstrap.min.js"></script>
</body>
</html>